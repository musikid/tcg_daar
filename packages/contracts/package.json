{
  "name": "contracts",
  "scripts": {
    "console": "hardhat console --network localhost",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "lint": "conc -c auto --group 'npm:lint:contracts' 'npm:lint:js'",
    "lint:contracts": "hardhat check",
    "lint:js": "eslint test",
    "lint:fix": "conc -c auto --group 'npm:lint:contracts:fix' 'npm:lint:js:fix'",
    "lint:contracts:fix": "solhint contracts --fix",
    "lint:js:fix": "eslint '{deploy,test,scripts}/**/*.ts' --fix",
    "test": "hardhat test",
    "docgen": "solidity-docgen",
    "deploy": "hardhat deploy --network localhost",
    "node": "hardhat node"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "*",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "concurrently": "^8.2.2",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "ethers": "*",
    "hardhat": "^2.18.0",
    "hardhat-deploy": "^0.11.43",
    "solhint": "^3.6.2",
    "solidity-docgen": "^0.6.0-beta.36"
  },
  "lint-staged": {
    "*.sol": "solhint --fix",
    "*.{js,ts}": "eslint --fix"
  }
}
