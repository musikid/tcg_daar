generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id   String @id @map("_id")
  role Role   @default(USER)
  keys Key[]

  @@index([id])
  @@map("user")
}

model Key {
  id              String  @id @map("_id")
  hashed_password String?
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([id, user_id])
  @@map("key")
}

model Card {
  id          String @id @map("_id")
  description String
  image       String
  name        String
  // ID of the set this card belongs to, in external API
  set_id      String

  @@index([id, set_id])
  @@map("card")
}
