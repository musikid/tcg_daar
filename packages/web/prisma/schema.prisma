generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @map("_id")
  address String @unique
  keys    Key[]

  @@map("user")
  @@index([id, address])
}

model Key {
  id              String  @id @map("_id")
  hashed_password String? @ignore
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("key")
  @@index([id, user_id])
}
