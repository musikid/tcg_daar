generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id     String   @id @map("_id")
  role   Role     @default(USER)
  keys   Key[]
  Binder Binder[]

  @@index([id])
  @@map("user")
}

model Binder {
  id      String @id @map("_id")
  user_id String
  name    String
  cards   Card[]
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([id, user_id])
  @@map("binder")
}

model Key {
  id              String  @id @map("_id")
  // Hashed password (not used since we have Sign in with Ethereum)
  hashed_password String?
  user_id         String
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([id, user_id])
  @@map("key")
}

model Set {
  id          String @id @map("_id")
  name        String
  original_id String
  cards       Card[]

  @@index([id])
  @@map("set")
}

model Card {
  id          String  @id @map("_id")
  description String
  image       String
  name        String
  // Original ID of the card in external API
  original_id String
  // ID of the binder might card belongs to
  binder_id   String?
  binder      Binder? @relation(fields: [binder_id], references: [id], onDelete: Cascade)
  set_id      String
  set         Set     @relation(fields: [set_id], references: [id], onDelete: Cascade)

  @@index([id, set_id])
  @@map("card")
}

model Booster {
  id          String @id @map("_id")
  name        String

  @@index([id])
  @@map("booster")
}